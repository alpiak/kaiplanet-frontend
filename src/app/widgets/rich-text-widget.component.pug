                option(value="#888888")
                option(value="#a10000")
                option(value="#b26b00")
                option(value="#b2b200")
                option(value="#006100")
                option(value="#0047b2")
                option(value="#6b24b2")
                option(value="#444444")
                option(value="#5c0000")
                option(value="#663d00")
                option(value="#666600")
                option(value="#003700")
                option(value="#002966")
                option(value="#3d1466")
        span.ql-formats([style.display]="width > 1045 ? 'inline-block' : 'none'")
            button.ql-script(
                value="super"
                type="button"
            )
            button.ql-script(
                value="sub"
                type="button"
            )
        span.ql-formats([style.display]="width > 974 ? 'inline-block' : 'none'")
            button.ql-header(
                value="1"
                type="button"
            )
            button.ql-header(
                value="2"
                type="button"
            )
            button.ql-blockquote(type="button")
            button.ql-code-block(type="button")
        span.ql-formats([style.display]="width > 847 ? 'inline-block' : 'none'")
            button.ql-list(
                value="ordered"
                type="button"
            )
            button.ql-list(
                value="bullet"
                type="button"
            )
            button.ql-indent(
                value="-1"
                type="button"
            )
            button.ql-indent(
                value="+1"
                type="button"
            )
        span.ql-formats([style.display]="width > 528 ? 'inline-block' : 'none'")
            button.ql-direction(type="button")
            select.ql-align
                option(selected)
                option(value="center")
                option(value="right")
                option(value="justify")
        span.ql-formats([style.display]="width > 343 ? 'inline-block' : 'none'")
            button.ql-link(
                [style.display]="width > 692 ? 'inline-block' : 'none'"
                type="button"
            )
            button.ql-image(type="button")
            button.ql-video(
                [style.display]="width > 664 ? 'inline-block' : 'none'"
                type="button"
            )
            button.ql-formula(
                [style.display]="width > 720 ? 'inline-block' : 'none'"
                type="button"
            )
        span.ql-formats([style.display]="width > 386 ? 'inline-block' : 'none'")
            button.ql-clean(type="button")
        span.ql-formats
            button(
                emojiPanel
                "(onEmojiSelect)"="onEmojiSelect($event)"
                type="button"
            )
                svg.svg-ic_20px-dims
                    use(xlink:href="#ic_face_24px")
button(
    [style.display]="editable ? 'none' : 'block'"
    md-icon-button
    color="accent"
)
    svg.svg-ic_15px-dims(
        (click)="editable = true"
        mdTooltip="Edit"
        mdTooltipPosition="above"
    )
        use(xlink:href="#ic_create_24px")
button(
    [style.display]="editable ? 'block' : 'none'"
    md-icon-button
    color="accent"
)
    svg.svg-ic_15px-dims(
        (click)="onSave()"
        mdTooltip="Save"
        mdTooltipPosition="above"
    )
        use(xlink:href="#ic_save_24px")