    [style.display]="editable ? 'block' : 'none'"
    "(onEditorCreated)" = "onEditorCreated($event)"
)
    div(quill-editor-toolbar)
        span.ql-formats
            span
                select.ql-font
                    option(value="aref") Aref Ruqaa
                    option(value="mirza") Mirza
