            button(
            emojiPanel
            "(onEmojiSelect)"="onEmojiSelect($event)"
            type="button"
            )
                svg.svg-ic_20px-dims
                    use(xlink:href="#ic_face_24px")
        | {{ width }}
button(
    [style.display]="editable ? 'none' : 'block'"
    md-icon-button
    color="accent"
)
    svg.svg-ic_15px-dims(
        (click)="editable = true"
        mdTooltip="Edit"
        mdTooltipPosition="above"
    )
        use(xlink:href="#ic_create_24px")
button(
    [style.display]="editable ? 'block' : 'none'"
    md-icon-button
    color="accent"
)
    svg.svg-ic_15px-dims(
        (click)="onSave()"
        mdTooltip="Save"
        mdTooltipPosition="above"
    )
        use(xlink:href="#ic_save_24px")